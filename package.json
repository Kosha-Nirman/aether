{
	"name": "aether",
	"version": "0.0.1",
	"description": "A minimal Node.js starter template, designed for clarity and extensibility",
	"main": "index.js",
	"scripts": {
		"database": "docker compose up -d",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "nest start",
		"dev": "npm run database && nest start --watch --preserveWatchOutput",
		"debug": "nest start --debug --watch --preserveWatchOutput",
		"prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@11.5.2",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Kosha-Nirman/aether.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"bugs": {
		"url": "https://github.com/Kosha-Nirman/aether/issues"
	},
	"homepage": "https://github.com/Kosha-Nirman/aether#readme",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/eslintrc": "^3.3.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^30.0.5",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.1",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2"
	}
}
